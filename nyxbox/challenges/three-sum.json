{
  "name": "three-sum",
  "difficulty": "medium",
  "description": "Given an array and a target number, return the indices of the first triplet of numbers that add up to the target. Return as a list of three indices.",
  "function_name": "three_sum",
  "type": "function",
  "inputs": ["arr","target"],
  "tests": [
    {
      "input": [[1, 4, 2, 10, -3], 15],
      "expected_output": [0, 1, 3]
    },
    {
      "input": [[2, 7, 11, 15, -5], 13],
      "expected_output": [1, 2, 4]
    },
    {
      "input": [[3, 2, 4, 1], 8],
      "expected_output": [0, 2, 3]
    },
    {
      "input": [[1, 2, 3, 4, 5, 6], 12],
      "expected_output": [1, 3, 5],
      "hidden": true
    },
    {
      "input": [[-1, 0, 1, 2, -1, -4], 0],
      "expected_output": [0, 1, 2],
      "hidden": true
    },
    {
      "input": [[10, 20, 30, 40, 50], 100],
      "expected_output": [0, 3, 4]
    }
  ]
}
