/* Container for button groups */
#button_panel {
  width: 50%;
  height: auto;
  align: center middle;
  margin: 1;
}

/* Styling for buttons */
Button {
  width: 20;
  height: 3;
  margin: 1 2;
}

.remove {
    display: none;
}

ModalScreen {
  align: center middle;
  content-align: center middle;
  background: rgba(0, 0, 0, 0.5); /* semi-transparent */
}
#quit_screen {
  width: auto;
  height: auto;
  content-align: center middle;
  border: tall #3b82f6
} 

#quit_screen Label {
  width: 100%;
  content-align: center middle;
}
#quit_buttons {
  width: auto;
  height: auto;
  align: center middle
}

#exit_screen {
  align: center middle;
  content-align: center middle
} 

#language_select_box {
  width: 60;           /* increase width */
  min-width: 40;       /* optional: ensures it's not too narrow */
  max-width: 80;       /* optional: prevents it from being too wide */
  min-height: 8;       /* decrease min-height */
  max-height: 14;      /* optional: prevents it from being too tall */
  align: center middle;
  content-align: center middle;
  border: tall #3b82f6;
  background: #222; /* solid box */
  padding: 2;
}

#language_select_buttons {
  content-align: center middle; 
  align: center middle
}
