/* Main app styling */
VendingMachine {
  background: #222222;
  color: #ffffff;
  align: center middle;
  padding: 2;
}

/* Header styling */
Header {
  dock: top;
  height: 3;
  text-style: bold;
}

/* Footer styling */
Footer {
  dock: bottom;
}

/* Challenge view styling */
#challengeview {
  width: 70%;
  padding: 0;
  margin: 2;
  align: center middle;
}

/* Text area for solution writing */
